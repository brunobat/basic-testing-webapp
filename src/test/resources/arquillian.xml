<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<arquillian xmlns="http://jboss.org/schema/arquillian" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
    <!--<container qualifier="arquillian-wls-remote-10.3"/>-->
    <container default="false" qualifier="weblogic">
        <!--<defaultProtocol type="Servlet 3.0"/>-->
        <configuration>
            <property name="wlHome">/devel/wls12130/</property>
            <property name="weblogicJarPath">/devel/wls12130/wlserver/server/lib/wlfullclient.jar</property>
            <property name="adminUrl">t3://localhost:7001</property>
            <property name="adminUserName">weblogic</property>
            <property name="adminPassword">welcome1</property>
            <property name="target">myserver</property>
        </configuration>
    </container>
    <container default="true" qualifier="arquillian-wildfly8-managed">
        <configuration>
            <property name="jbossHome">target/wildfly-8.1.0.Final</property>
            <property name="modulePath">target/wildfly-8.1.0.Final/modules</property>
        </configuration>
    </container>
    <container default="false" qualifier="arquillian-wildfly-remote"/>
    <container default="false" qualifier="arquillian-tomee-embedded">
        <configuration>
            <property name="httpPort">-1</property>
            <property name="stopPort">-1</property>
            <property name="ajpPort">-1</property>
            <property name="dir">target/tomee-remote</property>
            <property name="appWorkingDir">target/work4</property>
        </configuration>
    </container>
    <container default="false" qualifier="arquillian-tomee-remote" >
        <configuration>
            <property name="httpPort">-1</property>
            <property name="stopPort">-1</property>
            <!--Optional Container Properties-->
            <property name="properties">
                aproperty=something
            </property>
            <!--Optional Remote Adapter Deployer Properties
            <property name="deployerProperties">
                aproperty=something
            </property>
            -->
        </configuration>
    </container>
</arquillian>
